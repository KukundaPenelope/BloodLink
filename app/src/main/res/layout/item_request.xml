<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/donorNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Donor Name: John Doe"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/requestIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Request ID: 123456"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/requestTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Request Time: 2024-04-15 10:30 AM"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/requestStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Request Status: In Progress"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/bloodGroupText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0+"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/red"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>